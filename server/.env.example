# GreenKeep Server Environment Variables
# Copy this file to .env and fill in your values

# Server
PORT=4000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_GLOBAL_DB=greenkeep_global

# JWT
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# OpenWeather API
OPENWEATHER_API_KEY=your-openweather-api-key

# Mapbox (client-side, but stored here for reference)
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# Google Calendar OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:4000/api/v1/calendar/callback

# IoT Sensor API Key (for external sensor devices to push data)
SENSOR_API_KEY=your-sensor-api-key

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
