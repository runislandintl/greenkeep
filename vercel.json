{
  "version": 2,
  "buildCommand": "cd client && npx vite build",
  "outputDirectory": "dist",
  "framework": null,
  "functions": {
    "api/[...path].js": {
      "maxDuration": 30,
      "includeFiles": "server/**,shared/**"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/[...path]" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
